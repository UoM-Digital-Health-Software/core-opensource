<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity QuestionPage.
    -->
    <changeSet id="20210716170936-1" author="jhipster">
        <createTable tableName="question_page">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_question_page__name" />
            </column>
            <column name="jhi_order" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="show_skip" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="text" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="skip_page_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="show_item_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <changeSet id="20210716170936-1-data" author="jhipster" context="server">
        <loadData
                  file="config/liquibase/data/question_page.csv"
                  separator=";"
                  tableName="question_page">
            <column name="id" type="numeric"/>
            <column name="active" type="boolean"/>
            <column name="name" type="string"/>
            <column name="jhi_order" type="numeric"/>
            <column name="show_skip" type="boolean"/>
            <column name="skip_page_id" type="numeric"/>
            <column name="show_item_id" type="numeric"/>
            <column name="title" type="string"/>
            <column name="text" type="string"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
